<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="25dp"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/blog_image"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                android:src="@mipmap/event_default" />

            <LinearLayout
                android:id="@+id/layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@+id/layout_addremove"
                android:layout_toRightOf="@id/blog_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/blog_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="ANCE Toward the next mileâ€¦"
                    android:textColor="#48354b"
                    android:textSize="18dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/blog_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="2 Mar 2017 at 7:30 PM"
                        android:textColor="#9495aa"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/dot"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/blog_date"
                        android:background="@drawable/circle"
                        android:singleLine="true"
                        android:text="."
                        android:textColor="#a3a3a3"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/dot"
                        android:singleLine="true"
                        android:text="by"
                        android:textColor="#9495aa"
                        android:textSize="12dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/by"
                        android:singleLine="true"
                        android:text="Sunil Kumar"
                        android:textColor="#ef4023"
                        android:textSize="12dp"
                        android:visibility="gone" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/blog_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#4c4c4c"
                    android:textSize="14dp" />

            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>